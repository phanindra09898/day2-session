#include <stdio.h>

int main() {
    int num_array[10], *ptr, max_num;
    printf("Enter 10 numbers:\n");

    for(int i=0; i<10; i++) {
        scanf("%d", &num_array[i]);
    }

    ptr = (num_array);   
    max_num = *ptr;   

    for(int i=1; i<10; i++) {
        ptr++;          
        if(*ptr > max_num) {
            max_num = *ptr;    
        }
    }

    printf("Maximum number is: %d\n", max_num);
    return 0;
}
