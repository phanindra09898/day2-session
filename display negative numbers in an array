#include<stdio.h> 

int main() {
    int n,i;
    printf("enter the size of the array: ");
    scanf("%d", &n);
    
    int arr[n];
    printf("enter the elements of the array: \n");
    for (i=0;i<n;i++) {
        scanf("%d",&arr[i]);
    }
    printf("negative numbers in the array: ");
    for (i=0; i<n; i++) {
        if (arr[i] <0) {
        printf("%d",arr[i]);
    }
}
return 0;
}               
